DEFAULT_INI_DATA :: "\n\nhost=www.example.com\n[hello]\n\n\nname=John\n\nip=192.168.2.1\n"

filename := input("Where would you like to write ini file: ")
use_default := input("Use default data (Y/N): ")
ini_data := DEFAULT_INI_DATA

if use_default != "Y" {
	print("Type out the INI data and input 'done' to finish")

	ini_data = ""
	last_input := input()

	while last_input != "done" {
		ini_data = strcat(ini_data, strcat(last_input, "\n"))
		last_input = input()
	}

	print("\nThanks.")
}

printf("Total bytes to write: %d\n", strlen(ini_data))

file := fopen(filename, "w")

bytes_written := fwrite(file, ini_data)

printf("Bytes written: %d\n", bytes_written)

fclose(file)

print("Done.")